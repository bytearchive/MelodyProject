{% extends 'MelodySiteBundle::base.html.twig' %}

{% block body %}
    <h1>Pages list</h1>

    <table>
        <tbody>
        {% if pages|length == 0 %}
            <div class="alert alert-warning">No pages found</div>
        {% else %}
            {% for page in pages %}
                <tr>
                    <td><a href="{{ path('page_show', { 'id': page.id }) }}">{{ page.id }}</a></td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('page_show', { 'id': page.id }) }}">show</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
{% endblock %}
