{% extends 'MelodySiteBundle::base.html.twig' %}

{% set namespace = _self.getTemplateName()|split(':') %}
{% block file %}{{ namespace[1] }}/{{ namespace[2] }}{% endblock %}

{% block body %}
    <h1><i class="fa fa-file-text-o" aria-hidden="true"></i> Pages list</h1>

    {% if pages|length == 0 %}
        <div class="alert alert-warning">
            <i class="fa fa-warning"></i> No pages found
        </div>
    {% else %}
        {% for page in pages %}
            <a href="{{ path('page_show', { 'id': page.id }) }}"><h2>{{ page.title }}</h2></a>
            <div>{{ page.text|slice(0, 500) }}</div>
        {% endfor %}
    {% endif %}
{% endblock %}
