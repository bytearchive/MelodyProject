{% extends 'MelodySiteBundle::base.html.twig' %}

{% block body %}
    <h1>Articles list</h1>

    <table>
        <tbody>
        {% if articles|length == 0 %}
            <div class="alert alert-warning">No articles found</div>
        {% else %}
            {% for article in articles %}
                <tr>
                    <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('article_show', { 'id': article.id }) }}">show</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
{% endblock %}
